{
    "name": "vscode-w3cvalidation",
    "displayName": "W3C Validation",
    "description": "Adds W3C validation support to Visual Studio Code.",
    "version": "2.3.2",
    "publisher": "Umoxfo",
    "author": {
        "name": "Makoto Sakaguchi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Umoxfo/vscode-w3cvalidation.git"
    },
    "bugs": {
        "url": "https://github.com/Umoxfo/vscode-w3cvalidation/issues"
    },
    "license": "MIT",
    "categories": [
        "Linters"
    ],
    "engines": {
        "vscode": "^1.31.0"
    },
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "W3C Validation",
            "properties": {
                "vscode-w3cvalidation.javaHome": {
                    "type": "string",
                    "description": "Specifies the folder path to the JRE used to launch the W3C Validation Language Server.\nFor example \"C:\\Program Files\\Java\\jre1.8.0_171\"",
                    "default": null
                }
            }
        }
    },
    "main": "./client/out/extension",
    "scripts": {
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "compile": "tsc -b client server",
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile"
    },
    "devDependencies": {
        "@types/node": "^10.14.8",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/eslint-plugin-tslint": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "eslint": "^5.16.0",
        "tslint": "^5.17.0",
        "typescript": "^3.5.1",
        "typescript-tslint-plugin": "^0.4.0"
    }
}
