{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Client",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/client/out/**/*.js",
                "${workspaceRoot}/server/out/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "watch"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Language Server",
            "port": 6009,
            "outFiles": [
                "${workspaceRoot}/server/out/**/*.js"
            ]
        }
    ]
}
