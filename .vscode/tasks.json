{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "reveal": "silent"
    },
    "tasks": [
        {
            "label": "compile",
            "dependsOn": [
                "compile:client",
                "compile:server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "identifier": "compile:client",
            "type": "typescript",
            "tsconfig": "client\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "identifier": "compile:server",
            "type": "typescript",
            "tsconfig": "server\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "watch",
            "dependsOn": [
                "watch:client",
                "watch:server"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "identifier": "watch:client",
            "type": "typescript",
            "tsconfig": "client\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "identifier": "watch:server",
            "type": "typescript",
            "tsconfig": "server\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
    ]
}
