{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "reveal": "silent"
    },
    "group": "none",
    "tasks": [
        {
            "label": "Client Compile",
            "type": "typescript",
            "tsconfig": "client/tsconfig.json",
            "problemMatcher": "$tsc",
            "presentation": {
                "group": "groupCompile"
            }
        },
        {
            "label": "Server Compile",
            "type": "typescript",
            "tsconfig": "server/tsconfig.json",
            "problemMatcher": "$tsc",
            "presentation": {
                "group": "groupCompile"
            }
        },
        {
            "label": "compile",
            "dependsOn": [
                "Client Compile",
                "Server Compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Client Watch",
            "type": "typescript",
            "tsconfig": "client/tsconfig.json",
            "option": "watch",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "group": "groupWatch"
            }
        },
        {
            "label": "Server Watch",
            "type": "typescript",
            "tsconfig": "server/tsconfig.json",
            "option": "watch",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "group": "groupWatch"
            }
        },
        {
            "label": "watch",
            "dependsOn": [
                "Client Watch",
                "Server Watch"
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true,
        }
    ]
}
