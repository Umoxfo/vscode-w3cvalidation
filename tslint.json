{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "object-literal-sort-keys": [
            true,
            "ignore-case",
            "match-declaration-order-only",
            "shorthand-first"
        ],
        "prefer-while": true,
        // Disable rules that conflict with ESLint rules
        "array-type": false,
        "curly": false,
        "interface-name": false,
        "interface-over-type-literal": false,
        "semicolon": false,
        "trailing-comma": false
    }
}
